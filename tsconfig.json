{
  "compilerOptions": {
    // --- 기본 설정 ---
    "target": "esnext", // 최신 자바스크립트 버전으로 컴파일
    "lib": ["dom", "dom.iterable", "esnext"], // 사용할 API 라이브러리 목록 (웹 브라우저 환경)
    "jsx": "preserve", // JSX 코드를 React 코드로 변환 (Gatsby에서 처리)
    "module": "esnext", // 모듈 시스템은 ES 모듈 사용
    "moduleResolution": "node", // 모듈 해석 방식은 Node.js 방식
    "allowSyntheticDefaultImports": true, // default import 허용
    "esModuleInterop": true, // CommonJS와 ES Module 간 호환성
    "resolveJsonModule": true, // JSON 파일 import 허용

    // --- 중요한 설정 (점진적 전환을 위해) ---
    "allowJs": true, // 자바스크립트 파일과 타입스크립트 파일이 공존하는 것을 허용
    "noEmit": true, // 타입스크립트가 자바스크립트 파일을 직접 만들지 않도록 설정 (Gatsby가 이 역할을 대신함)
    "isolatedModules": true, // 각 파일을 독립된 모듈로 처리 (Gatsby 요구사항)

    // --- 코드 품질을 위한 강력한 추천 설정 ---
    "strict": false, // 점진적 마이그레이션을 위해 false로 설정
    "skipLibCheck": true, // 설치된 라이브러리들의 타입 검사는 건너뛰기 (빌드 속도 향상)
    "forceConsistentCasingInFileNames": true // 파일 이름의 대소문자를 구분하도록 강제
  },
  // 타입스크립트가 검사할 파일들의 위치
  "include": ["src/**/*"],
  // 타입스크립트가 무시할 파일/폴더
  "exclude": ["node_modules", "public", ".cache"]
}